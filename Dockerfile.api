FROM python:3.11-slim

WORKDIR /app

# Installer ffmpeg et dépendances système
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Copier et installer les dépendances Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Installer les dépendances API
RUN pip install --no-cache-dir \
    flask \
    flask-cors \
    gunicorn \
    yt-dlp \
    openai-whisper

# Installer PyTorch CPU (séparé pour éviter les conflits)
RUN pip install --no-cache-dir torch --index-url https://download.pytorch.org/whl/cpu

# Copier le code Python
COPY *.py ./

# Copier le dossier templates
COPY templates/ ./templates/

# Exposer le port
EXPOSE 5000

# Variables d'environnement par défaut
ENV GROCY_URL=http://localhost:9283
ENV GROCY_API_KEY=""

# Démarrer avec Gunicorn
# Augmenter le timeout pour les imports Instagram (transcription peut prendre du temps)
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "300", "--access-logfile", "-", "api:app"]
